<h1>全ての投稿</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to '詳細', post %></td>
      <td><%= link_to '編集', edit_post_path(post) %></td>
      <td><%= link_to '削除', post_path(post),
                method: :delete, data: { confirm: '削除しますか？' } %></td>
    </tr>

  <% end %>
</table>

<%= link_to "新しい投稿", new_post_path %>
