<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
        <h2><%= @post.errors.count %>件のエラーが発生したため保存ができませんでした。</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title, :size => "100" %>
  </p>

  <p>
    <%= f.label :text, "内容" %><br>
    <%= f.text_area :text, cols: 100, rows: 20 %>
  </p>

  <p>
    <label>カテゴリ</label><br>
    <%= f.fields_for :categories do |category_form| %>
      <%= category_form.text_field :name %>
    <% end %>
  </p>

  <p>
    <%= f.submit style: "margin-top:10px;" %>
  </p>
<% end %>
